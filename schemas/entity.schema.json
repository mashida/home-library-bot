{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "name",
    "type",
    "topics",
    "description",
    "is_active",
    "last_content_at",
    "update_channels",
    "source_evidence"
  ],
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "type": {"type": "string", "enum": ["PERSON", "COMPANY", "TOOL", "SOURCE"]},
    "topics": {"type": "array", "items": {"type": "string"}},
    "description": {"type": "string"},
    "is_active": {"type": "boolean"},
    "last_content_at": {"type": ["string", "null"], "format": "date"},
    "update_channels": {"type": "array", "items": {"type": "string", "format": "uri"}},
    "source_evidence": {"type": "string", "format": "uri"},
    "github": {"type": "string", "format": "uri"},
    "twitter": {"type": "string", "format": "uri"},
    "domain": {"type": "string"},
    "org": {"type": "string"},
    "repo_url": {"type": "string", "format": "uri"},
    "rss": {"type": "string", "format": "uri"},
    "meta": {"type": "object"}
  }
}
